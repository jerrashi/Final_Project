<h1>
<%= @user.first_name %> 
<%= @user.last_name %>
</h1>

Email: <%= @user.username %>

<dl>
  <% if @user.board%>
    <dt>Board Member</dt>
  <% end %>
</d1>

  <h3>Your Applications (<%= @user.applications.count%>):</h3>
    <table border="1">
      <tr>
        <th>
          Date
        </th>

        <th>
          Project
        </th>

        <th>
          Result
        </th>

        <th>
        </th>
      </tr>

      <% @user.applications.each do |application| %>
      <tr>
        <td>
            <%= application.created_at %>
        </td>

        <td>
            <%= application.project_label %>
        </td>

        <td>
            <%= application.status %>
        </td>

        <td>
            <a href="/applications/<%= application.id %>">
              Link
            </a>
        </td>
      </tr>
    <%end%>
    </table>

  <d1>
    <% if @current_user.id == @user.id %>
    <a href = "/insert_application_record"> Submit new application </a>
    <% end %>
  </d1>

  <h3>Your Projects(<%= @user.projects.count%>)</h3>
    <table border="1">
      <tr>
        <th>
          Date
        </th>

        <th>
          Project
        </th>

        <th>
          Client
        </th>

        <th>
          Description
        </th>

        <th>
        </th>
      </tr>

      <% @user.projects.each do |project| %>
      <tr>
        <td>
            <%= project.created_at %>
        </td>

        <td>
            <%= project.project_label %>
        </td>

        <td>
            <%= project.client %>
        </td>

        <td>
            <%= project.description %>
        </td>

        <td>
            <a href="/users/<%= @user.id %>/projects/<%= project.id %>">
              Link
            </a>
        </td>
      </tr>
      <% end %>
    </table>

  <% if @current_user.id == @user.id %>
  <h3>Update Profile Information</h3>
  <dd>
    <form action="/users/<%= @user.id %>/update_user_record" method="post">
      <div>
        <label for="username">Email: </label>
        <input id="username" type="email" name="input_username" placeholder="Update your email address..." value=<%= @user.username %>>
      </div>
      
      <div>
        <label for="first_name">First name: </label>
        <input id="first_name" type="text" name="input_first_name" value=<%= @user.first_name %>>
      </div>

      <div>
        <label for="last_name">Last name: </label>
        <input id="last_name" type="text" name="input_last_name" value=<%= @user.last_name %>>
      </div>

      <div>
        <label for="board">Board?</label>
        <input id="board" type="checkbox" name="input_board" <%= " checked" if @user.board %>>
      </div>

      <div>
        <label for="dob">Date of Birth: </label>
        <input id="dob" type="date" name="input_dob" value=<%= @user.date_of_birth %>>
      </div>

      <div>
        <label for="ethnicity">Ethnicity: </label>
        <input id="ethnicity" type="text" name="input_ethnicity" value=<%= @user.ethnicity %>>
      </div>

      <div>
        <label for="gender">Gender: </label>
        <input id="gender" type="text" name="input_gender" value=<%= @user.gender %>>
      </div>

      <div>
        <label for="graduation_date">Expected Graduation Date: </label>
        <input id="graduation_date" type="date" name="input_graduation_date" value=<%= @user.graduation_date %>>
      </div>

      <div>
        <label for="linkedin">Linkedin: </label>
        <input id="linkedin" type="text" name="input_linkedin" value=<%= @user.linkedin %>>
      </div>

      <div>
        <label for="major">Major: </label>
        <input id="major" type="text" name="input_major" value=<%= @user.major %>>
      </div>

      <div>
        <label for="subscriber">Subscriber: </label>
        <input id="subscriber" type="checkbox" name="input_subscriber" <%= " checked" if @user.subscriber %>>
      </div>

      <div>
        <label for="password">New Password: </label>
        <input id="password" type="password" name="input_password">
      </div>

      <div>
        <label for="major">Confirm New Password: </label>
        <input id="major" type="text" name="input_password_confirmation">
      </div>

      <div>
        <button>Update Information</button>
      </div>

    </form>
  </dd>

  <h3> Delete Account </h3>
  <form action = /users/<%= @user.id %>/delete_user_record" method ="get">
  <dd>
    <button>Delete Account</button>
  </dd>
  <% end %>