<h1> Sign up</h1>

<form action="/insert_user_record" method="post">
  <div>
    <label for="username">Email: </label>
    <input id="username" type="text" name="input_username" placeholder="Enter your email address...">
  </div>

  <div>
    <label for="Password">Password</label>
    <input id="Password" type="password" name="input_password">
  </div>

  <div>
    <label for="Password">Password Confirmation</label>
    <input id="Password" type="password" name="input_password_confirmation">
  </div>

  <div>
    <label for="first_name">First name: </label>
    <input id="first_name" type="text" name="input_first_name">
  </div>

  <div>
    <label for="last_name">Last name: </label>
    <input id="last_name" type="text" name="input_last_name">
  </div>

  <div>
    <label for="board">Board?</label>
    <input id="board" type="checkbox" name="input_board">
  </div>

  <div>
    <label for="dob">Date of Birth: </label>
    <input id="dob" type="date" name="input_dob">
  </div>

  <div>
    <label for="ethnicity">Ethnicity: </label>
    <input id="ethnicity" type="text" name="input_ethnicity">
  </div>

  <div>
    <label for="gender">Gender: </label>
    <input id="gender" type="text" name="input_gender">
  </div>

  <div>
    <label for="graduation_date">Expected Graduation Date: </label>
    <input id="graduation_date" type="month" name="input_graduation_date">
  </div>

  <div>
    <label for="linkedin">Linkedin: </label>
    <input id="linkedin" type="text" name="input_linkedin">
  </div>

  <div>
    <label for="major">Major: </label>
    <input id="major" type="text" name="input_major">
  </div>

  <div>
    <label for="subscriber">Subscribe to occasional email updates? </label>
    <input id="subscriber" type="checkbox" name="input_subscriber">
  </div>

  <button>
    Sign up
  </button>
</form>